<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <p><%= task.content %></p>
        </div>
        <div>
          <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" } %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>