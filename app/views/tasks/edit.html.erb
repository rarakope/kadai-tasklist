<h1>id: <%= @task.id %> のタスク編集ページ</h1>
  <%= form_with(model: @task, local: true) do |f| %>
    <div class="form-group">
      <%= f.label 'ステータス' %>
      <%= f.text_field :status %>
    </div>
    <div>
      <%= f.label 'タスク' %>
      <%= f.text_area :content %>
    </div>
    <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
  <% end %>
        
<%= link_to '一覧へ戻る', root_path %>